<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- FORM VIEW -->
        <record id="view_cp_form" model="ir.ui.view">
            <field name="name">cp.form</field>
            <field name="model">cp</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_read_only" style="font-size:25px">Khách hàng và đối tác</div>
                        <group col="4" string="Thông tin chung">
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TREE VIEW -->
        <record id="view_cp_tree" model="ir.ui.view">
            <field name="name">cp.tree</field>
            <field name="model">cp</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    
                </tree>
            </field>
        </record>

        <!-- SEARCH VIEW -->
        <record id="cp_search" model="ir.ui.view">
            <field name="name">cp.search</field>
            <field name="model">cp</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                    
                </search>
            </field>
        </record>

        <!-- ACTION -->
        <record id="action_cp" model="ir.actions.act_window">
            <field name="name">Khách hàng và đối tác</field>
            <field name="res_model">cp</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="cp_search"/>
        </record>
    </data>
</odoo>
